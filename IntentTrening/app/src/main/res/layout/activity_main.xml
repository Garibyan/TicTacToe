<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">


    <TextView
        android:id="@+id/tvNumber"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="180dp"
        android:freezesText="true"
        android:text="0"
        android:textSize="70sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btnIncrement"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="Increment"
        app:layout_constraintEnd_toEndOf="@+id/tvNumber"
        app:layout_constraintStart_toStartOf="@+id/tvNumber"
        app:layout_constraintTop_toBottomOf="@+id/tvNumber" />

    <Button
        android:id="@+id/btnRandomColor"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="Random Color"
        app:layout_constraintEnd_toEndOf="@+id/btnIncrement"
        app:layout_constraintStart_toStartOf="@+id/btnIncrement"
        app:layout_constraintTop_toBottomOf="@+id/btnIncrement" />

    <Button
        android:id="@+id/btnSwitchVisibility"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="Switch Visibility"
        app:layout_constraintEnd_toEndOf="@+id/btnRandomColor"
        app:layout_constraintStart_toStartOf="@+id/btnRandomColor"
        app:layout_constraintTop_toBottomOf="@+id/btnRandomColor" />
</androidx.constraintlayout.widget.ConstraintLayout>